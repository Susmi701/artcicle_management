<h1 class="text-center my-4">Users</h1>
<div class="flickr_pagination">
    <%= will_paginate @users, :container => false %>
</div>
<div class="container">
    
        <div class="row ">
            <% @users.each do |user| %>
            <div class="col-4 mt-4  ">
                <div class="card  shadow mb-5 bg-body rounded">
                    
                    <div class="card-body ">
                        <%= link_to profile_path(user), class: "text-black text-decoration-none fs-2" do %>
                            <%= fa_icon 'user' %> <%= "#{user.first_name} #{user.last_name}" %>
                        <% end %>
                        <h5 class="card-title mt-3"><%= pluralize(user.articles.count,"article")%></h5>
                        <p class="card-text"><%= user.email%></p>
                    </div>
                    <div class="card-footer text-muted  ">
                        <small>Joined <%= time_ago_in_words(user.created_at)%> ago,
                        </small>
                    </div>
                </div>
            </div>
        
    <% end %>    
    </div> 
</div>   
<div class="flickr_pagination">
    <%= will_paginate @users, :container => false %>
</div>

